{% extends 'base.html.twig' %}

{% block title %}Arcadia | Laisser un avis{% endblock %}

{% block body %}
<div class="flex justify-center items-center w-full h-screen">
    <div class="flex justify-center flex-col items-center w-full h-full">
        <div class="flex justify-center flex-col items-center bg-forest-green font-normal-font rounded-[10px] px-20 py-6 shadow-2xl">
            <h2 class="text-2xl font-semibold text-center mb-6 text-sand-text">Laissez un avis</h2>
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div class="mb-4">
                {{ form_label(form.pseudo, null, {'label_attr': {'class': 'block text-sand-text font-semibold mb-2'}}) }}
                {{ form_widget(form.pseudo, {'attr': {'class': 'w-full px-4 py-2 rounded-lg bg-sand-text border border-gray-300 focus:outline-none focus:ring-2 focus:ring-forest-green'}}) }}
                {{ form_errors(form.pseudo, {'attr': {'class': 'text-red-500 text-sm mt-2'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.comments, null, {'label_attr': {'class': 'block text-sand-text font-semibold mb-2'}}) }}
                {{ form_widget(form.comments, {'attr': {'class': 'w-full px-4 py-2 h-32 rounded-lg bg-sand-text border border-gray-300 focus:outline-none focus:ring-2 focus:ring-forest-green'}}) }}
                {{ form_errors(form.comments, {'attr': {'class': 'text-red-500 text-sm mt-2'}}) }}
            </div>

            <div class="text-center">
                <button type="submit" class="w-full px-6 py-2 bg-ocean-blue text-sand-text rounded-lg hover:bg-ocean-blue focus:outline-none focus:ring-2 focus:ring-forest-green focus:ring-opacity-50 transition-transform transform hover:scale-105">
                    Soumettre
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
